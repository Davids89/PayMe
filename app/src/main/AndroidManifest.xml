<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luque.david.androidchat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PayMeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".login.ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.ui.MainActivity" />
        <activity
            android:name=".addDeal.ui.AddDealActivity"
            android:label="@string/adddeal.message.title" />
        <activity android:name=".dealDetails.DealDetails"
            android:parentActivityName=".main.ui.MainActivity"/>
    </application>

</manifest>